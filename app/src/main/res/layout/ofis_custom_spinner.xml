<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/ofis_buttonbg"
    android:padding="1dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/customSpinnerItemLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/customSpinnerIcon"
        android:layout_height="40sp">


        <TextView
            android:id="@+id/tvSpinnerLayout"
            android:text="Android"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="50sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/customSpinnerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/ofis_ic_baseline_keyboard_arrow_down_24"
        app:tint="@color/white"
        />
</RelativeLayout>